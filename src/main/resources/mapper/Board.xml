<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cos.mybatisblog.repository.BoardRepository">
	<select id="findAll" resultType="com.cos.mybatisblog.model.Board">
		SELECT * FROM board b, user u WHERE b.userId = u.id ORDER BY b.id DESC limit #{page}, 3
	</select>
	<select id="findById" resultType="com.cos.mybatisblog.model.Board">
		SELECT * FROM board b, user u WHERE b.userId = u.id and b.id=#{id}
	</select>
	<insert id="save">
		INSERT INTO board(title,content,userId,createDate) 
		VALUES(#{title},#{content},#{userId},now())
	</insert>
	<update id="update">
		UPDATE board SET title=#{title}, content=#{content}
		WHERE id=#{id}
	</update>
	<delete id="delete">
		DELETE FROM board WHERE id=#{id}
	</delete>
</mapper>